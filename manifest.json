{
    "manifest_version": 3,
    "name": "Gmail Tab Hider",
    "version": "1.0",
    "description": "Hides Gmail tabs during specified hours.",
    "permissions": [
      "storage",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "https://mail.google.com/*"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  